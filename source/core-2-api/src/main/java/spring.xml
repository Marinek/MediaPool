<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
		<property name="driverClass" value="com.mysql.jdbc.Driver"/>
		<property name="jdbcUrl" value="jdbc:mysql://localhost:3306/mediapool"/>
		<property name="user" value="root"/>
		<property name="password" value="root"/>
	</bean>

	<bean id="entityManagerFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="annotatedClasses">
			<list>
				<value>de.mediapool.core.persistence.vo.media.EntityTypeVO</value>
				<value>de.mediapool.core.persistence.vo.media.EntityVO</value>
				<value>de.mediapool.core.persistence.vo.media.EntityAttributeVO</value>
				<value>de.mediapool.core.persistence.vo.media.EntityAttributeDefVO</value>
				<value>de.mediapool.core.persistence.vo.relationship.RelationshipVO</value>
				<value>de.mediapool.core.persistence.vo.user.UserVO</value>
				<value>de.mediapool.core.persistence.vo.media.products.MediaProductVO</value>
			</list>
		</property>
		<property name="hibernateProperties">
           <props>
           		<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
           		<prop key="hibernate.hbm2ddl.auto">create-drop</prop>
               	<prop key="hibernate.show_sql">true</prop>
           </props>
        </property>
	</bean>

	<bean id="movieService" class="de.mediapool.core.services.media.MediaServiceImpl">
	</bean>
	<bean id="installationService" class="de.mediapool.core.services.install.InstallationServiceImpl">
	</bean>
	
	<bean id="entityDAO" class="de.mediapool.core.persistence.dao.entitys.EntityDAOImpl">
	 <property name="sessionFactory" ref="entityManagerFactory" />
	</bean>
	
	<bean id="entityAttributeDAO" class="de.mediapool.core.persistence.dao.entitys.EntityAttributeDAOImpl">
	 <property name="sessionFactory" ref="entityManagerFactory" />
	</bean>

	<bean id="entityTypeDAO" class="de.mediapool.core.persistence.dao.entitys.EntityTypeDAOImpl">
	 <property name="sessionFactory" ref="entityManagerFactory" />
	</bean>
	
	<bean id="entityAttributeDefsDAO" class="de.mediapool.core.persistence.dao.entitys.EntityAttributeDefsDAOImpl">
	 <property name="sessionFactory" ref="entityManagerFactory" />
	</bean>
	
	<bean id="MediaProductsDAO" class="de.mediapool.core.persistence.dao.entitys.products.MediaProductsDAOImpl">
	 <property name="sessionFactory" ref="entityManagerFactory" />
	</bean>
	
	<bean id="psTransaction" class="de.mediapool.core.persistence.core.PSTransaction" singleton="false">
	 <property name="sessionFactory" ref="entityManagerFactory" />
	</bean>
	
</beans>

