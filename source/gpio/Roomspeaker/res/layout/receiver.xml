<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_receiver"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/rc_main_button1"
            style="@style/btnStyleGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+string/rc_main_button1" />

        <LinearLayout
    		android:id="@+id/layout_fm_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/rc_fm_button1"
	            style="@style/btnStyleGreen"
	            android:layout_width="0dp" 
        		android:layout_height="wrap_content" 
        		android:layout_weight="20"
                android:text="@+string/rc_fm_button1" />

            <Button
                android:id="@+id/rc_fm_button2"
        	    style="@style/btnStyleGreen"
	            android:layout_width="0dp" 
        		android:layout_height="wrap_content" 
        		android:layout_weight="21"
                android:text="@+string/rc_fm_button2" />

            <Button
                android:id="@+id/rc_fm_button3"
    	        style="@style/btnStyleGreen"
	            android:layout_width="0dp" 
        		android:layout_height="wrap_content" 
        		android:layout_weight="19"
                android:text="@+string/rc_fm_button3" />

            <Button
                android:id="@+id/rc_fm_button4"
            	style="@style/btnStyleGreen"
	            android:layout_width="0dp" 
        		android:layout_height="wrap_content" 
        		android:layout_weight="20"
                android:text="@+string/rc_fm_button4" />
            
            <Button
                android:id="@+id/rc_fm_button5"
	            style="@style/btnStyleGreen"
	            android:layout_width="0dp" 
        		android:layout_height="wrap_content" 
        		android:layout_weight="20"
                android:text="@+string/rc_fm_button5" />

        </LinearLayout>

        <Button
            android:id="@+id/rc_main_button2"
            style="@style/btnStyleGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+string/rc_main_button2" />

        <Button
            android:id="@+id/rc_main_button3"
            style="@style/btnStyleGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+string/rc_main_button3" />

        <Button
            android:id="@+id/rc_main_button4"
            style="@style/btnStyleGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+string/rc_main_button4" />

        <Button
            android:id="@+id/rc_main_button5"
            style="@style/btnStyleGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+string/rc_main_button5" />

        <RelativeLayout 
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/rc_vol_button1"
                android:background="@drawable/btn_voldown"
                android:layout_marginTop="15dip"
	            android:layout_toLeftOf="@+id/rc_vol_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/rc_vol_button2"
                android:background="@drawable/btn_volmute"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/rc_vol_button3"
                android:background="@drawable/btn_volup"
	            android:layout_width="wrap_content"
                android:layout_marginTop="15dip"
	            android:layout_toRightOf="@+id/rc_vol_button2"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>