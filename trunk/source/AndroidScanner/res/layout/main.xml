<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/scanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ISBN-NUMMER SCANNEN" />

    <TextView
        android:id="@+id/eanTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EAN-CODE"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/eanTextEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="false" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/saveEanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EAN-Code speichern" />

    <Button
        android:id="@+id/synchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datenbank synchronisieren" />

    <ListView
        android:id="@+id/eanNumberList"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:choiceMode="none" >
    </ListView>

    <Button
        android:id="@+id/closeButton"
        android:layout_width="128dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="close" />

</LinearLayout>